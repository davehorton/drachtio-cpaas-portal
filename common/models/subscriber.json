{
  "name": "subscriber",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "number"
    },
    "first": {
      "type": "string"
    },
    "last": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "account_balance": {
      "type": "number"
    },
    "product_offering_id": {
      "type": "number"
    },
    "demo_code": {
      "type": "string"
    },
    "my_number": {
      "type": "string"
    },
    "social_id_provider": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "applications": {
      "type": "hasMany",
      "model": "application",
      "foreignKey": "subscriber_id"
    },
    "phoneNumbers": {
      "type": "hasMany",
      "model": "phone_number",
      "foreignKey": "subscriber_id"
    },
    "dialogflows": {
      "type": "hasMany",
      "model": "dialogflow",
      "foreignKey": "subscriber_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "login"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "signup"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "verifyEmail"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "signupWithSocial"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "getMyNumber"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getGithubAccessToken"
    }
  ],
  "methods": {
    "signup": {
      "accepts": [
        {
          "arg": "email",
          "type": "string"
        },
        {
          "arg": "pwd",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "status",
        "type": "string"
      },
      "http": {
        "path": "/signup",
        "verb": "post"
      }
    },
    "verifyEmail": {
      "accepts": [
        {
          "arg": "url",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "status",
        "type": "string"
      },
      "http": {
        "path": "/verify-url",
        "verb": "post"
      }
    },
    "getMyInfo": {
      "accepts": [
        {
          "arg": "email",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "info",
        "type": "string"
      },
      "http": {
        "path": "/get-my-info",
        "verb": "post"
      }
    },
    "addMyNumber": {
      "accepts": [
        {
          "arg": "email",
          "type": "string"
        },
        {
          "arg": "number",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "status",
        "type": "string"
      },
      "http": {
        "path": "/add-my-number",
        "verb": "post"
      }
    },
    "getMyNumber": {
      "accepts": [
        {"arg": "id", "type": "number", "required": true}
      ],
      "returns": {"type": "object", "root": true},
      "http": {"path": "/:id/number", "verb": "get"}
    },
    "getGithubAccessToken": {
      "accepts": [
        {"arg": "code", "type": "string", "source": "query", "required": true}
      ],
      "returns": {"arg": "access_token", "type": "string"},
      "http": {"path": "/github_access_token", "verb": "get"}
    },
    "signupWithSocial": {
      "accepts": [
        {
          "arg": "email",
          "type": "string"
        },
        {
          "arg": "social",
          "type": "string"
        },
        {
          "arg": "password",
          "type": "string"
        },
        {
          "arg": "first",
          "type": "string"
        },
        {
          "arg": "last",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "status",
        "type": "string"
      },
      "http": {
        "path": "/signup_with_social",
        "verb": "post"
      }
    }
  }
}
